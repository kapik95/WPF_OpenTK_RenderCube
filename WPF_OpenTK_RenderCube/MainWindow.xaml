<Window x:Class="WPF_OpenTK_RenderCube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_OpenTK_RenderCube"
        mc:Ignorable="d"
        Title="OpenTKInWPF" 
        Height="600" Width="800"
        MinHeight="400" MinWidth="600">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="Aqua"
                Margin="10">
            
        </Border>

        <StackPanel Grid.Column="1"
                    Margin="10">
            <Button x:Name="startButton"
                    Content="Начать рисование"
                    IsEnabled="True"
                    Command="{Binding Start}"
                    Margin="5"/>

            <ComboBox x:Name="drawingModeComboBox"
                      IsEnabled="{Binding IsDrawing}"
                      ItemsSource="{Binding Modes}"
                      SelectedItem="{Binding SelectedMode}"
                      Margin="5"/>

            <Button x:Name="stopButton"
                    Content="Закончить рисование"
                    IsEnabled="{Binding IsDrawing}"
                    Command="{Binding Stop}"
                    Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
